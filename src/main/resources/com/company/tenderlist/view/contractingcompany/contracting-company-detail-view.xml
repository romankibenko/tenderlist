<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://contractingCompanyDetailView.title"
      focusComponent="form">
    <data>
        <instance id="contractingCompanyDc"
                  class="com.company.tenderlist.entity.ContractingCompany">
            <fetchPlan extends="_base"/>
            <loader id="contractingCompanyDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="contractingCompanyDc"
                    css="--vaadin-input-field-placeholder-color:DarkGray;">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameOfContractingCompanyField" property="nameOfContractingCompany"
                       placeholder="Укажите название контрагента"/>
            <textField id="individualNumberField" property="individualNumber"
            placeholder="0123456789"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
